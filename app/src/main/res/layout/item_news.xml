<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/space_normal"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/fontsize_normal"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/img_cover"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/txt_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_xsmall"
        android:textSize="@dimen/fontsize_xsmall"
        app:layout_constraintEnd_toEndOf="@id/txt_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_title"
        />

    <ImageView
        android:id="@+id/img_cover"
        android:layout_width="@dimen/space_xxxxxlarge"
        android:layout_height="@dimen/space_xxxxxlarge"
        android:layout_marginStart="@dimen/space_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/txt_title"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/news_cover_image" />

</androidx.constraintlayout.widget.ConstraintLayout>